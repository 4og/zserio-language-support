{
    "name": "zserio-language-support",
    "displayName": "zserio Language Support",
    "description": "zserio schema language support",
    "version": "0.5.0",
    "license": "MIT",
    "preview": true,
    "icon": "images/icon.png",
    "publisher": "4og",
    "bugs": "https://github.com/4og/zserio-language-support/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/4og/zserio-language-support"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:zserio"
    ],
    "contributes": {
        "languages": [
            {
                "id": "zserio",
                "aliases": [
                    "zserio"
                ],
                "extensions": [
                    ".zs"
                ],
                "icon": {
                    "light": "./images/file-icon-light.png",
                    "dark": "./images/file-icon-dark.png"
                },
                "configuration": "./language-configuration.json"
            },
            {
                "id": "datascript",
                "aliases": [
                    "datascript"
                ],
                "extensions": [
                    ".ds"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "zserio",
                "scopeName": "source.zs",
                "path": "./syntaxes/zserio.tmLanguage.json"
            },
            {
                "language": "datascript",
                "scopeName": "source.zs",
                "path": "./syntaxes/zserio.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^17.0.10",
        "@types/vscode": "^1.1.37",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "typescript": "^4.5.5",
        "vsce": "^2.6.3"
    },
    "dependencies": {
        "antlr4": "^4.9.3"
    }
}
